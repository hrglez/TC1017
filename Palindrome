#include <iostream>
#include <string>
using namespace std;

int isPalindrome(string x){
int l=x.length(),i=0,j=1;
if (l==1) return 1;
for (i;i<(l/2);i++,j++){
    if(x[i]==x[l-j]){
      return 1;
    }
    else{
      i=l;
    }
}
return 0;
}

int main(){
  string e;
  int a;
  cout<< "Write a word: ";
  cin>>e;
  a=isPalindrome(e);
  if (a==0) cout<<"Sorry, the word "<<e<<" is not a palindrome"<<endl;
  if (a==1) cout<<"Cool, the word "<<e<<" is a palindrome"<<endl;
  return 0;
}
